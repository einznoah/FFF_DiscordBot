{{!--
    Invisible dummy frame to redirect response answer
    to this to don't reload the page after request.
--}}
<iframe style="display: none" name="dummyframe" id="dummyframe"></iframe>

<form action="/sendMessage" method="POST" target="dummyframe" >
    {{!-- Channel selector --}}
    <label>
        <input type="text" name="channel id" placeholder="channel id">
    </label>
    {{!-- Message text input --}}
    <label>
        <input type="text" name="text" placeholder="TEXT">
    </label>
    {{!-- Send button --}}
    <input type="submit" class="button" value="SEND">
</form>